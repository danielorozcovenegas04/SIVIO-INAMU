        </select>
    </div>
    <div class="col-xs-4 form-group">
        <label>Abuso sexual:</label>
        <input class="form-control" id="txtCantonDestino" type="text" required="">
    </div>
    <div class="col-xs-4 form-group">
        <label>Parentesco del presunto ofensor:</label>
        <input class="form-control" id="txtParentescoOfensor" type="text">
    </div>
</div>

